# Setup WSGI
WSGIScriptAlias / /home/slashdot/slashdotquotes/slashdotdjango/wsgi.py
WSGIPythonPath /home/slashdot/slashdotquotes
<Directory /home/slashdot/slashdotquotes/slashdotdjango>
  <Files wsgi.py>
    Order deny,allow
    Allow from all
  </Files>
</Directory>

# Static files
Alias /static/ /home/slashdot/slashdotquotes/static_gather/
<Directory /home/slashdot/slashdotquotes/static_gather>
  Order deny,allow
  Allow from all
</Directory>

# robots.txt
Alias /robots.txt /home/slashdot/slashdotquotes/static_gather/robots.txt
